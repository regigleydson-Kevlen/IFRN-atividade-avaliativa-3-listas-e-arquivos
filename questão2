max_tamanho = int(input("Informe a quantidade m√°xima de elementos na lista: "))
valores = []

while True:
    valor = int(input("Informe um valor (digite 0 para parar): "))
    if valor == 0:
        break
    elif len(valores) == max_tamanho:
        del valores[-1]
        valores.append(valor)
        valores.sort()
        print("Lista atualizada:", valores)
    else:
        valores.append(valor)
        valores.sort()
        print("Lista atualizada:", valores)
